<h1><%= @article.title %></h1>

<p><%= @article.body %></p>


<% if user_signed_in? %>
<ul>
  <li><%= link_to "Edit", edit_article_path(@article) %></li>

  <li><%= link_to "Destroy", article_path(@article), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %></li>            
</ul>
<% else %>
  <p>Log in to edit ot remove articles</p>
<% end %>

<h2>Keywords</h2>
<% @article.keywords.each do |k| %> 
   <%= k.word =%>
<%end%>

<h2>Comments</h2>
<%= render @article.comments %>

<% if user_signed_in? %>
  <h2>Add a comment:</h2>
  <%= render 'comments/form' %>
<% else %>
  <p>Log in to add comments</p>
<% end %>